<%- include('partials/_header') %>

   <!-- body -->
   <body class="main-layout">
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="/images/loading.gif" alt="#" /></div>
      </div>
      <!-- end loader -->
      <!-- header -->
      <%- include('partials/_navbar') %>

      <!-- end header inner -->
      <!-- end header -->
      <!-- banner -->
      <section class="banner_main">
        <img src="/images/bgii.jpg" alt="Laboratuvar Arka Plan" class="img-fluid" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; opacity: 0.9;">
        <div id="banner1" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <% announcements.forEach((announcement, index) => { %>
                    <li data-target="#banner1" data-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"></li>
                <% }) %>
            </ol>
            <div class="carousel-inner">
                <% announcements.forEach((announcement, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
                            <div class="announcement-card text-center shadow-lg p-4 rounded">
                                <h3 class="announcement-title"><%= announcement.title %></h3>
                                <p class="announcement-content"><%= announcement.content %></p>
                                <% if (announcement.link) { %>
                                    <a href="<%= announcement.link %>" class="btn btn-primary mt-3">Detayları Gör</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <a class="carousel-control-prev" href="#banner1" role="button" data-slide="prev">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
            </a>
            <a class="carousel-control-next" href="#banner1" role="button" data-slide="next">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </a>
        </div>
    </section>
    
    <style>
        .announcement-card {
            background: rgba(255, 255, 255, 0.95);
            max-width: 600px;
            border-radius: 15px;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }
        .announcement-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }
        .announcement-title {
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }
        .announcement-content {
            font-size: 18px;
            color: #555;
        }
        .carousel-inner {
            animation: fadeIn 1s ease-in-out;
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>
    
    
     
