<!-- header -->
<header>
  <div class="header">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
          <div class="full">
            <div class="center-desk">
              <div class="logo">
                <a href="/"><img src="/images/main-logo-2-10.yil-2.png" alt="#" /></a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
          <nav class="navigation navbar navbar-expand-md navbar-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExample04">
              <ul class="navbar-nav mr-auto">
                <% if (user) { %>
                  <% if (user.role === 'admin') { %>
                   
                    <li class="nav-item <%= link === 'admin-dashboard' ? 'active' : '' %>">
                      <a class="nav-link" href="/admin/dashboard"><i class="fas fa-tachometer-alt mr-2"></i>Dashboard</a>
                    </li>
                    <li class="nav-item <%= link === 'admin-operators' ? 'active' : '' %>">
                      <a class="nav-link" href="/admin/operators"><i class="fas fa-user-cog mr-2"></i>Operatörler</a>
                    </li>
                    <li class="nav-item <%= link === 'admin-students' ? 'active' : '' %>">
                      <a class="nav-link" href="/admin/students"><i class="fas fa-user-graduate mr-2"></i>Öğrenciler</a>
                    </li>
                    <li class="nav-item <%= link === 'admin-reports' ? 'active' : '' %>">
                      <a class="nav-link" href="/admin/reports"><i class="fas fa-chart-line mr-2"></i>Raporlar</a>
                    </li>
                    <li class="nav-item <%= link === 'admin-announcements' ? 'active' : '' %>">
                      <a class="nav-link" href="/admin/announcements"><i class="fas fa-bullhorn mr-2"></i>Duyurular</a>
                    </li>
                    <li class="nav-item <%= link === 'admin-lab-details' ? 'active' : '' %>">
                      <a class="nav-link" href="/admin/labs"><i class="fas fa-network-wired me-2"></i>Laboratuvar Detayları</a>
                    </li>
                  <% } else if (user.role === 'operator') { %>
                    <li class="nav-item <%= link === 'operator-dashboard' ? 'active' : '' %>">
                      <a class="nav-link" href="/operator/dashboard"><i class="fas fa-desktop mr-2"></i>Bilgisayar Yönetimi</a>
                    </li>
                    <li class="nav-item <%= link === 'operator-scannedStudent' ? 'active' : '' %>">
                      <a class="nav-link" href="/operator/scannedStudent"><i class="fas fa-user-check mr-2"></i>Öğrenci İşlemleri</a>
                    </li>
                    <li class="nav-item <%= link === 'operator-labStatus' ? 'active' : '' %>">
                      <a class="nav-link" href="/operator/labStatus"><i class="fas fa-server mr-2"></i>Lab Durumları</a>
                    </li>
                    <li class="nav-item <%= link === 'operator-program' ? 'active' : '' %>">
                      <a class="nav-link" href="/operator/program"><i class="fas fa-calendar-alt mr-2"></i>Operatör Programı</a>
                    </li>
                  <% } else if (user.role === 'student') { %>
                    
                    <li class="nav-item <%= link === 'student-dashboard' ? 'active' : '' %>">
                      <a class="nav-link" href="/student/dashboard"><i class="fas fa-calendar-day mr-2"></i>Günlük Kullanım</a>
                    </li>
                    <li class="nav-item <%= link === 'lab-history' ? 'active' : '' %>">
                      <a class="nav-link" href="/student/lab-history"><i class="fas fa-history mr-2"></i>Kullanım Geçmişi</a>
                    </li>
                    <li class="nav-item <%= link === 'lab-computer-status' ? 'active' : '' %>">
                      <a class="nav-link" href="/student/lab-computer-status"><i class="fas fa-network-wired mr-2"></i>Laboratuvar Bilgisayar Durumları</a>
                    </li>
                  <% } %>
                  <li class="nav-item">
                    <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt mr-2"></i>Çıkış Yap</a>
                  </li>
                <% } else { %>
                  <li class="nav-item">
                    <a class="nav-link nav-link-icon" href="/login"><i class="fas fa-sign-in-alt mr-2"></i>Giriş Yap</a>
                  </li>
                  <!-- <li class="nav-item">
                    <a class="nav-link nav-link-icon" href="/register"><i class="fas fa-user-plus mr-2"></i>Kayıt Ol</a>
                  </li> -->
                <% } %>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
